<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/rounded_border">

    <TextView
        android:text="Tambah Jadwal Kuliah"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView android:text="Hari" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Spinner
        android:id="@+id/spinnerDay"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_border"
        android:layout_marginBottom="10dp"/>

    <TextView android:text="Nama Mata Kuliah" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/etSubjectDialog"
        android:hint="Contoh: Pemrograman Mobile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_border"
        android:paddingHorizontal="10dp"
        android:textSize="14sp"
        android:layout_marginBottom="10dp"
        android:inputType="textCapSentences"
        android:maxLines="1"
        android:imeOptions="actionNext"/> <TextView android:text="Jam (Mulai - Selesai)" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <EditText
            android:id="@+id/etStartTime"
            android:hint="07:30"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="@drawable/rounded_border"
            android:paddingHorizontal="10dp"
            android:inputType="number"
            android:maxLength="5"
            android:maxLines="1"
            android:imeOptions="actionNext"/> <TextView
        android:text=" - "
        android:gravity="center"
        android:layout_width="30dp"
        android:layout_height="match_parent"/>

        <EditText
            android:id="@+id/etEndTime"
            android:hint="10:00"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:background="@drawable/rounded_border"
            android:paddingHorizontal="10dp"
            android:inputType="number"
            android:maxLength="5"
            android:maxLines="1"
            android:imeOptions="actionNext"/> </LinearLayout>

    <TextView android:text="Ruangan" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/etRoomDialog"
        android:hint="Contoh: F.01"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rounded_border"
        android:paddingHorizontal="10dp"
        android:textSize="14sp"
        android:layout_marginBottom="20dp"
        android:inputType="textCapCharacters"
        android:maxLines="1"
        android:imeOptions="actionDone"/> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">

    <Button
        android:id="@+id/btnCancelDialog"
        android:text="Batal"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnSaveDialog"
        android:text="Simpan"
        android:backgroundTint="@color/blue_btn"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>

</LinearLayout>